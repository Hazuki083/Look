<div class="container">
  <div class="row">
    <div class="col-md-2 text-center" style="margin: 10px 0 10px 0;">
      <h3 style="background-color: #eeeeee;">商品一覧</h3>
    </div>
    
    <div class="col-md-8"></div>
    <div class="col-md-2 text-center" style="margin: 5px 0 10px 0;">
      <%= link_to "", new_admin_item_path, class: "fas fa-pencil-alt fa-2x" %>
    </div>
  </div>
  
  <table class='table table-hover table-inverse'>
    <thead>
      <tr class="info">
        <th>写真</th>
        <th>商品名</th>
        <th>参考価格</th>
        
      </tr>
    </thead>
    
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <th><%= attachment_image_tag item, :image_id, :fill, 50, 50,fallback: "no.jpg" %></th>
          <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark" %></td>
          <td><%= item.price %></td>
        </tr>
     <% end %>
     <!--kaminari記述-->
     <%= paginate @items %>
   </tbody>
  </table>
</div>