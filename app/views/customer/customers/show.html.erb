<%= flash[:notice] %>
<div class="container">
	<h2 class="head-line text-center">マイページ</h2>
	<div class="row">
	  <div class="text-center col-md-5">
	  	<%= render 'customer/customers/user', customer: @customer %>
		</div>
			<div class="row" style="margin: 50px 0 0 80px;">
			  <table class="table table-bordered" >
				  <tbody>
					  <tr>
						  <td class="info col-xs-2">名前</td>
						  <td class="text-left"><%= @customer.name %>さん</td>
					  </tr>
					  <tr>
						  <td class="info">年代</td>
						  <td class="text-left"><%= @customer.age %></td>
					  </tr>
					  <tr>
						  <td class="info">肌質</td>
						  <td class="text-left"><%= @customer.skin %></td>
					  </tr>
					  <tr>
						  <td class="info">メールアドレス</td>
						  <td class="text-left"><%= @customer.email %></td>
						</tr>
				   </tbody>
			   </table>
			   <div class="btn-group mr-3">
			   	<ul><%= link_to " 編集", edit_customer_path, class: "btn btn-outline-success" %>
						  <% if customer_signed_in? && @customer.id == current_customer.id %>
              <%= link_to "退会", customers_out_path(current_customer), method: :put, "data-confirm" => "本当に退会しますか？", class: "btn btn-outline-danger" %>
              <% end %>
          </ul>
         </div>
		  </div>
		</div>
</div>
