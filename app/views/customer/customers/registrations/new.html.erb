<div class="admin" style="min-height: 500px">
  <div class="card col-sm-5 mx-auto mt-5">
    <div class="card-body">
      <h4 class="mt-1 mb-3 bg-gray text-center ">新規登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customer/customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form-control"%>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %><br/>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", :class => "btn btn-outline-secondary btn-block" %>
  </div>
<% end %>

<%= render "customer/customers/shared/links" %>
