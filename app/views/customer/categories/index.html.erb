<div class="container">
  <h2 class="text-center">カテゴリー</h2>

  <div class="row-text-center">
    <% @categories.each do |category| %>
      <div class="card-deck">
        <div class="card">
          <div class="col-ms3 card-body" id=<%= category.id %>>
            <div class="card-title">
              <h5>
                <%= category.name %>
              </h5>
                <div class="content">
                  <% category.sub_categories.each do |sub_category| %>
                    <div class="categories-by">
                      <%= link_to sub_category.name, items_path(sub_category: sub_category.id) %>
                    </div>
                  <% end %>
                </div>
            </div>
          </div>
        </div>
      </div>
     <% end %>
   </div>
  </div>

