<div class="container">
  <h2 class="text-center">カテゴリー</h2>

   <div class="card-deck">
    <% @categories.each do |category| %>
        <div class="card">
          <div class="card-body" id=<%= category.id %>>
            <div class="card-title">
              <h5>
                <%= category.name %>
              </h5>
                <% category.sub_categories.each do |sub_category| %>
              <div class="categories-by">
                <%= link_to sub_category.name, items_path(sub_category: sub_category.id) %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
  </div>

