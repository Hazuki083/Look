<div class="container">
	<h2 class="head-line text-center">レビューの投稿</h2>
	<%= render 'layouts/error_messages', model: f.object %>
	  <div class="text-center" style="margin: 50px 0 0 0;">
    
    <%= form_with(model: [@item, @post], local: true) do |f| %>
          <!--<div class="form-group">-->
          <!--  <#%= f.label :image, "画像を追加" %><br/>-->
          <!--  <#%= f.attachment_field :image %>-->
          <!--</div>-->
          <div class="form-group">
            <%= f.label :review, "レビュー" %><br/>
            <%= f.text_area :review, placeholder:"商品をレビューしてみましょう！
            例）つけ心地、おすすめの使い方"%>
          </div>

          <!--評価機能はjavascript-->
          <div id="rating-form">
            <label>評価：</label>
            <%= f.hidden_field :rate, id: :review_star %>
            <!--rateを使うときはhiddenを使う決まり-->
            <script>
             $('#rating-form').raty({
                starOn: "<%= asset_path('star-on.png') %>",
                starOff: "<%= asset_path('star-off.png') %>",
                scoreName: 'post[rate]'   // 登録するモデル名［カラム名］
             });
            </script>
          </div><br/>
          <%= f.submit "投稿", class:"btn btn-secondary w-200px" %>
        <% end %>
  </div>
</div>