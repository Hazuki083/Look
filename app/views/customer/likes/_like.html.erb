<div id="item_<%= item.id %>">
  <!--論理演算子。２つとも真でないとだめ-->
 <% if customer_signed_in? && item.liked_by?(current_customer) %>
    <p>
      <%= link_to "/items/#{item.id}/likes", method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
        <%= item.likes.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to "/items/#{item.id}/likes", method: :post, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true"></i>
        <%= item.likes.count %>
      <% end %>
    </p>
  <% end %>
</div>